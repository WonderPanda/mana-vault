{
  "name": "mana-vault",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@cloudflare/workers-types": "^4.20251213.0",
      "hono": "^4.8.2",
      "@orpc/server": "^1.12.2",
      "@orpc/openapi": "^1.12.2",
      "@orpc/zod": "^1.12.2",
      "better-auth": "^1.4.9",
      "alchemy": "^0.82.1",
      "@libsql/client": "0.15.15",
      "libsql": "0.5.22",
      "@orpc/tanstack-query": "^1.12.2",
      "@orpc/client": "^1.12.2",
      "@tanstack/react-query": "^5.90.12",
      "@polar-sh/better-auth": "^1.6.4",
      "@better-auth/expo": "^1.4.9"
    }
  },
  "type": "module",
  "scripts": {
    "dev": "doppler run -c dev -- turbo dev",
    "build": "turbo build",
    "check-types": "TURBO_UI=0 turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F server dev",
    "db:push": "turbo -F @mana-vault/db db:push",
    "db:generate": "turbo -F @mana-vault/db db:generate",
    "deploy": "turbo -F @mana-vault/infra deploy",
    "deploy:staging": "doppler run -c stg -- turbo -F @mana-vault/infra deploy",
    "destroy": "turbo -F @mana-vault/infra destroy",
    "check": "oxlint && oxfmt --check .",
    "format": "oxfmt --write ."
  },
  "dependencies": {
    "@mana-vault/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "catalog:",
    "@mana-vault/config": "workspace:*",
    "@types/node": "^22.13.14",
    "lefthook": "^2.0.13",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "shadcn": "^3.7.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.6"
}
